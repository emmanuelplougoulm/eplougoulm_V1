---
import Tag from "./Tag.astro";

interface Props {
  year: string;
  project: string;
  tags: string[];
  href: string;
}

const { year, project, tags, href } = Astro.props;
---

<tr
  class="min-h-16 text-left border-b border-b-1 border-gray-500 border-opacity-30 last:border-none"
>
  <td class="py-4 pr-4 align-top"> {year}</td>
  <td class="py-4 pr-4 align-top text-color-secondary"> {project}</td>
  <td
    class="py-4 pr-4 align-top flex items-center flex-wrap hidden lg:table-cell"
  >
    <span>
      {tags.map((tag) => <Tag name={tag} />)}
    </span>
  </td>
  <td class="py-4 pr-4 text-left align-top text-sm">
    <a
      class="group flex items-center active"
      href={href}
      target="_blank"
      rel="noreferrer noopener"
      ><span
        class="text-xs font-bold uppercase tracking-widest text-grey-medium group-hover:text-color-secondary group-focus-visible:text-color-secondary"
      >
        <svg
          height="20"
          width="20"
          viewBox="0 0 16 16"
          fill="currentColor"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82a7.68 7.68 0 0 1 2-.27c.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path>
        </svg>
      </span></a
    >
  </td>
</tr>
